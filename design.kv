<WelcomeScreen>:
    FloatLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome'
            font_size: '62sp'
            pos_hint: {'center_x' : 0.2, 'y' : 0.4}
            size: self.texture_size

    BoxLayout:
        orientation: 'vertical'
        Label:
            text: ''

    GridLayout:
        cols: 3
        pos: 0,-555
        Button:
            text: '1'
            size_hint_y: None
            height: dp(40)
        Button:
            text: '2'
            size_hint_y: None
            height: dp(40)
            on_release: root.to_scanning()
        Button:
            text: '3'
            size_hint_y: None
            height: dp(40)

<ScanningScreen>:
#:import ZBarCam kivy_garden.zbarcam.ZBarCam
    BoxLayout:
        orientation: 'vertical'
        ZBarCam:
            id: zbarcam
            # optional, by default checks all types
            code_types: 'QRCODE', 'EAN13'
            Button:
                pos_hint: {'top' : 1, 'center_x' : 0.5}
                halign: 'center'
                text: 'Back'
                size_hint: None, None
                on_release: root.to_mainpage()
        Label:
            size_hint: None, None
            size: self.texture_size[0], 50
            text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])

<RootWidget>:
    WelcomeScreen:
        name: 'welcome_screen'
    ScanningScreen:
        name: 'scanning_screen'