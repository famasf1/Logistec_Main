<WelcomeScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "welcome"
        Label:
            text: ''
    GridLayout:
        cols: 3
        pos: 0,-555
        Button:
            text: '1'
            size_hint_y: None
            height: dp(40)
        Button:
            text: 'Scan'
            size_hint_y: None
            height: dp(40)
            on_release: root.to_scanning()
        Button:
            text: '3'
            size_hint_y: None
            height: dp(40)

<ScanningScreen>:
#:import ZBarCam kivy_garden.zbarcam.ZBarCam
    MDBoxLayout:
        orientation: 'vertical'
        padding: '12dp'
        MDBoxLayout:
            ZBarCam:
                id: zbarcam
                AnchorLayout:
                    anchor_x: 'left'
                    anchor_y: 'top'
                    MDIconButton:
                        icon: 'arrow-left'
                        md_bg_color: 0,0,0,2
                        x: '12dp'
                        pos_hint: {'top' : .98}
                        on_press: root.ids.zbarcam.ids.xcamera.play=False
                        on_release: root.to_mainpage()
                AnchorLayout:
                    anchor_x: 'right'
                    anchor_y: 'bottom'
                    MDIconButton:
                        icon: 'send-check-outline'
                        md_bg_color: 0,0,0,2
                        x: '14dp'
                        pos_hint: {'bottom' : .98}
                        on_release: root.to_signature()
        Label:
            id: reading_scan
            size_hint: None, None
            size: self.texture_size[0], 50
            text: ', '.join([str(symbol.data) for symbol in zbarcam.symbols])
            on_text: root.readScan()

<SignatureScreen>:
#:import SignatureBox Pages.signaturepage.SignatureBox
    BoxLayout:
        orientation: 'horizontal'
        padding: 15,15
        Label:
            text: 'ลายเซ็นผู้ส่ง'
            font_name: 'Asset/angsana.ttc'
            font_size: '32sp'
            pos_hint: {'center_y' : .98}
            MDBoxLayout:
                SignatureBox:
                    id: signature_box
                    orientation: 'vertical'
                    adaptive_size: True
                    spacing: '12dp'
    AnchorLayout:
        padding: 15,15
        anchor_x: 'left'
        anchor_y: 'top'
        MDIconButton:
            icon: 'arrow-left'
            md_bg_color: 0,0,0,2
            x: '12dp'
            pos_hint: {'top' : .98}
            on_press: root.clear_canvas(root.ids.signature_box)
            on_release: root.to_scanning_page()
    BoxLayout:
        orientation: 'vertical'
        padding: 15,15
        MDIconButton:
            icon: 'cancel'
            md_bg_color: 0,0,0,2
            x: '16dp'
            pos_hint: {'bottom' : .98}
            on_press: root.clear_canvas(root.ids.signature_box)


    
<RootWidget>:
    WelcomeScreen:
        name: 'welcome_screen'
    ScanningScreen:
        name: 'scanning_screen'
    SignatureScreen:
        name: 'signature_screen'